@using DTO;
@model IEnumerable<PersonResponse>
@{
    Layout = null;
}
<link href="@("https://"+Context.Request.Host.ToString()+"/stylesheet.css")" rel="stylesheet"/>
<h1>Persons</h1>

<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Persons Name</th>
            <th>Email</th>
            <th>Date Of Birth</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Country</th>
            <th>Address</th>
            <th>Receive News Letters</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td style="width:10%">@person.PersonName</td>
                <td style="width:20%">@person.Email</td>
                <td style="width:15%">@person.DateOfBirth?.ToString("dd MM yyyy")</td>
                <td style="width:10%">@person.Age</td>
                <td style="width:10%">@person.Gender</td>
                <td style="width:10%">@person.Country</td>
                <td style="width:30%">@person.Address</td>
                <td style="width:15%">@person.ReceiveNewsLetters</td>
            </tr>
        }
    </tbody>
</table>
