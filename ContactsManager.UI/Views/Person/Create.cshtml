@{
    ViewBag.Title="Create";
}

<a href="~/person/index">Back to person's list</a>
<h2>Create person</h2>

<div class="w-50">
    <form action="~/person/create" method="post">

    <div class="form-field flex">
        <div class="w-25">
            <label for="PersonName" class="form-label pt">Person Name</label>
        </div>
        <div class="flex-1">
            <input type="text" id="PersonName" name="PersonName" class="form-input">
        </div>
    </div>

     <div class="form-field flex">
        <div class="w-25">
            <label for="Email" class="form-label pt">Email</label>
        </div>
        <div class="flex-1">
            <input type="email" id="Email" name="Email" class="form-input">
        </div>
    </div>

     <div class="form-field flex">
        <div class="w-25">
            <label for="DateOfBirth" class="form-label pt">Date of Birth</label>
        </div>
        <div class="flex-1">
            <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-input">
        </div>
    </div>

     <div class="form-field flex">
        <div class="w-25">
            <label for="Gender">Gender</label>
        </div>
        <div class="flex-1">
            <input type="radio" id="Male" name="Gender" value="Male">
            <label for="Male">Male</label>
             <input type="radio" id="Female" name="Gender" value="Female">
            <label for="Female">Female</label> 
            <input type="radio" id="Other" name="Gender" value="Other">
            <label for="Other">Other</label>
        </div>
    </div>

     <div class="form-field flex">
        <div class="w-25">
            <label for="CountryID" class="form-label pt">Country</label>
        </div>
        <div class="flex-1">
            <select id="CountryID" name="CountryID" class="form-input">
                <option value="">Select a country</option>
                @foreach (CountryResponse country in @ViewBag.Countries)
                {
                    <option value="@country.CountryID">@country.CountryName</option>
                }
            </select>
        </div>
    </div>

     <div class="form-field flex">
        <div class="w-25">
            <label for="Address" class="form-label pt">Address</label>
        </div>
        <div class="flex-1">
            <textarea type="text" id="Address" name="Address" class="form-input"></textarea>
        </div>
    </div>

     <div class="form-field flex">
        <div class="w-25">
        </div>
        <div class="flex-1">
            <input type="checkbox" id="ReceiveNewsLetters" name="ReceiveNewsLetters" value="true">
            <input type="hidden" name="ReceiveNewsLetters" value="false"/>
            <label for="ReceiveNewsLetters" class="form-label">Receive News Letters</label>
        </div>
    </div>
     <div class="form-field flex">
        <div class="w-25">
        </div>
        <div class="flex-1">
            <button class="button button-green-back">Create</button>
        </div>
    </div>
    @if(@ViewBag.Errors != null){
        <div class="text-red ml">
            <ul>
                @foreach (var error in @ViewBag.Errors)
                {
                    <li class="ml">@error</li>
                }
            </ul>
        </div>
    }
    </form>

</div>